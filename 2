#include "libft.h"

char	*ft_strtrim(char const *s1, char const *set)
{
	char	*ts;
	size_t	st;
	size_t	end;

	if(!s1 || !set)
		return (NULL);
	st = 0;
	while (s1[st] && ft_strchr(set, s1[st]))
		st++;
	end = ft_strlen(s1);
	while(end > st && ft_strchr(set, s1[end -1]))
		end--;
	ts = (char *)malloc(sizeof(char) * (end - st + 1));
	if (!ts)
		return (NULL);
	ft_strlcpy(ts, &s1[st], end - st + 1);
	return (ts);
}
